<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/dialog_background">

    <LinearLayout
        android:id="@+id/linear_choose"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@color/background_color"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/pizza_flavors"
            android:textColor="@color/text_color"
            android:textSize="16sp"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="15dp"
            android:layout_marginTop="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/please_select_any_one_option"
            android:textSize="14sp"
            android:layout_marginStart="16dp"
            android:textColor="@color/hint_color"/>
    </LinearLayout>

    <TextView
        android:id="@+id/chicken_frajita"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="15dp"
        android:layout_marginTop="8dp"
        android:text="@string/chicken_fajita"
        android:textColor="@color/text_color"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.003"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/linear_choose" />

    <ImageView
        android:id="@+id/check"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/linear_choose"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:src="@drawable/check_24"
        android:layout_marginTop="8dp"
        android:layout_marginStart="350dp"
        android:visibility="invisible"/>

    <View
        android:id="@+id/underline_choose"
        android:layout_width="370dp"
        android:layout_height="2dp"
        android:layout_marginTop="16dp"
        android:background="@color/background_color"
        android:foregroundGravity="center"
        app:layout_constraintTop_toBottomOf="@+id/chicken_frajita"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_editor_absoluteX= "19dp" />

    <TextView
        android:id="@+id/cheese_max"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="15dp"
        android:layout_marginTop="8dp"
        android:text="@string/cheese_max"
        android:textColor="@color/text_color"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.003"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/underline_choose" />

    <ImageView
        android:id="@+id/check1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/underline_choose"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:src="@drawable/check_24"
        android:layout_marginTop="8dp"
        android:layout_marginStart="350dp"
        android:visibility="invisible"/>

    <View
        android:id="@+id/underline_choose1"
        android:layout_width="370dp"
        android:layout_height="2dp"
        android:layout_marginTop="16dp"
        android:background="@color/background_color"
        android:foregroundGravity="center"
        app:layout_constraintTop_toBottomOf="@+id/cheese_max"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_editor_absoluteX="19dp" />

    <TextView
        android:id="@+id/thin_Style"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="15dp"
        android:layout_marginTop="8dp"
        android:text="@string/veggie_max"
        android:textColor="@color/text_color"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.003"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/underline_choose1"/>

    <ImageView
        android:id="@+id/check2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/underline_choose1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:src="@drawable/check_24"
        android:layout_marginTop="8dp"
        android:layout_marginStart="350dp"
        android:visibility="invisible"/>

    <View
        android:id="@+id/underline_choose2"
        android:layout_width="370dp"
        android:layout_height="2dp"
        android:layout_marginTop="16dp"
        android:background="@color/background_color"
        android:foregroundGravity="center"
        app:layout_constraintTop_toBottomOf="@+id/thin_Style"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_editor_absoluteX="19dp" />

    <TextView
        android:id="@+id/bbq_max"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="15dp"
        android:layout_marginTop="8dp"
        android:text="@string/bbq_max"
        android:textColor="@color/text_color"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.003"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/underline_choose2"/>

    <ImageView
        android:id="@+id/check3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/underline_choose2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:src="@drawable/check_24"
        android:layout_marginTop="8dp"
        android:layout_marginStart="350dp"
        android:visibility="invisible"/>


    <LinearLayout
        android:id="@+id/buttons_price"
        android:layout_width="match_parent"
        android:layout_height="61dp"
        app:layout_constraintTop_toBottomOf="@+id/bbq_max"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <Button
            android:id="@+id/cancel2"
            android:layout_width="205dp"
            android:layout_height="match_parent"
            android:backgroundTint="@color/background_color"
            android:text="@string/cancel"
            android:textAllCaps="false"
            android:textColor="@color/button_textColor"
            android:textSize="14sp"
            />

        <Button
            android:id="@+id/Confirm1"
            android:layout_width="205dp"
            android:layout_height="match_parent"
            android:backgroundTint="@color/indicator_color"
            android:text="@string/confirm"
            android:textAllCaps="false"
            android:textColor="@color/button_textColor"
            android:textSize="14sp"
            />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>