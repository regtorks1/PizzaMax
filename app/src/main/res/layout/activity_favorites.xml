<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".views.ui.activity.FavoritesActivity">



    <LinearLayout
        android:id="@+id/favorite_linear"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@color/deep_orange">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/favorites"
            android:layout_gravity="center"
            android:layout_marginStart="180dp"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:textStyle="bold"/>
    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="380dp"
        android:layout_height="170dp"
        android:layout_margin="5dp"
        app:layout_constraintTop_toBottomOf="@id/favorite_linear"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:cardCornerRadius="15dp"
        android:layout_marginTop="40dp"
        app:cardElevation="5dp"
        android:layout_marginStart="25dp">

    <ImageView
        android:id="@+id/poster_banner"
        android:layout_width="170dp"
        android:layout_height="170dp"/>

    <TextView
        android:id="@+id/deal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/deal_1"
        android:layout_marginStart="175dp"
        android:textColor="@color/black"/>

    <TextView
        android:id="@+id/description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/_7_inch_papan_pizza"
        android:layout_marginStart="175dp"
        android:layout_marginTop="20dp"/>

    <ImageView
        android:id="@+id/price_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/background_tag"
        android:layout_marginStart="175dp"
        android:layout_marginTop="108dp"/>

    <TextView
        android:id="@+id/price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="188dp"
        android:textColor="@color/black"
        android:layout_marginTop="110dp"
        android:textSize="12sp"/>
    </androidx.cardview.widget.CardView>



    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:listitem="@layout/recycler_list"
        app:layout_constraintTop_toBottomOf="@+id/favorite_linear"/>


</androidx.constraintlayout.widget.ConstraintLayout>