<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="?attr/background_color">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="380dp"
        android:layout_height="170dp"
        android:layout_margin="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:cardCornerRadius="5dp"
        android:layout_marginTop="40dp"
        app:cardElevation="250dp"
        android:layout_marginStart="25dp"
        app:cardBackgroundColor="?attr/cardBackground_color">

        <ImageView
            android:id="@+id/poster_banner"
            android:layout_width="170dp"
            android:layout_height="139dp"
            android:scaleType="fitXY"
            android:adjustViewBounds="true"
            android:layout_marginTop="16dp"/>

        <TextView
            android:id="@+id/deal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/deal_1"
            android:layout_marginStart="175dp"
            android:textColor="?attr/text_color"
            android:paddingTop="8dp"
            android:paddingStart="5dp"/>

        <TextView
            android:id="@+id/pizza_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/_7_inch_papan_pizza"
            android:layout_marginStart="175dp"
            android:layout_marginTop="30dp"
            android:paddingStart="5dp"
            android:textColor="?attr/hint_color"/>

        <ImageView
            android:id="@+id/price_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/background_tag"
            android:layout_marginStart="180dp"
            android:layout_marginTop="103dp"/>

        <TextView
            android:id="@+id/price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="190dp"
            android:textColor="?attr/text_color"
            android:layout_marginTop="105dp"
            android:textSize="12sp" />

        <Button
            android:id="@+id/add_cart"
            android:layout_width="100dp"
            android:layout_height="41dp"
            android:backgroundTint="@color/deep_orange"
            android:layout_marginStart="180dp"
            android:layout_marginTop="123dp"
            android:text="@string/add"
            android:textColor="?attr/button_textColor"
            android:drawableEnd="@drawable/shopping_cart_24"
            android:drawableTint="?attr/button_textColor"
            android:textSize="15sp" />

        <ImageView
            android:id="@+id/favorite_heart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="?attr/background_tint"
            android:layout_marginStart="345dp"
            android:layout_marginTop="138dp"
            android:background="@drawable/favorite_border"
            android:clickable="true"
            android:focusable="true"/>

        <ImageView
            android:id="@+id/favorite_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="?attr/background_tint"
            android:layout_marginStart="345dp"
            android:layout_marginTop="138dp"
            android:background="@drawable/delete_outline"
            android:clickable="true"
            android:focusable="true"
            android:visibility="invisible"/>



    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>