<ImageView
    android:id="@+id/poster"
    android:layout_width="match_parent"
    android:layout_height="240dp"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    android:background="@drawable/pizza_max_poster"/>

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tabs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/poster"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:tabTextAppearance="@android:style/TextAppearance.Widget.TabWidget"
        app:tabGravity="center"
        app:tabIndicatorColor="@color/red"
        app:tabIndicatorHeight="2dp"
        app:tabMode="scrollable"
        app:tabTextColor="@color/black"
      >

        <com.google.android.material.tabs.TabItem
            android:id="@+id/max_value_deals"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/max_value_deals"
            />

        <com.google.android.material.tabs.TabItem
            android:id="@+id/big_better"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/_2_big_2_better"/>

        <com.google.android.material.tabs.TabItem
            android:id="@+id/appetizers"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/appetizers"/>

        <com.google.android.material.tabs.TabItem
            android:id="@+id/signature"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/signature_pizza"/>

        <com.google.android.material.tabs.TabItem
            android:id="@+id/max"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/max_value_deals"/>

    </com.google.android.material.tabs.TabLayout>

<androidx.recyclerview.widget.RecyclerView
    android:id="@+id/recyclerView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:layout_constraintTop_toBottomOf="@+id/tabs"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    android:layout_marginStart="5dp"
    android:layout_marginEnd="5dp"
    tools:listitem="@layout/recycler_list"/>




</androidx.constraintlayout.widget.ConstraintLayout>