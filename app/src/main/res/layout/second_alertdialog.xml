<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="?attr/dialog_background">

    <LinearLayout
        android:id="@+id/linear_choose"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="?attr/background_color"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/choose_your_crust_"
            android:textColor="?attr/text_color"
            android:textSize="16sp"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="15dp"
            android:layout_marginTop="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/please_select_any_one_option"
            android:textSize="14sp"
            android:layout_marginStart="16dp"
            android:textColor="?attr/hint_color"/>
    </LinearLayout>

    <TextView
        android:id="@+id/deep_pan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="15dp"
        android:layout_marginTop="8dp"
        android:text="@string/deep_pan_signature"
        android:textColor="?attr/text_color"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.003"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/linear_choose" />

    <ImageView
        android:id="@+id/check"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/linear_choose"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:src="@drawable/check_24"
        android:layout_marginTop="8dp"
        android:layout_marginStart="350dp"
        android:visibility="invisible"/>

    <View
        android:id="@+id/underline_choose"
        android:layout_width="370dp"
        android:layout_height="2dp"
        android:layout_marginTop="16dp"
        android:background="?attr/background_color"
        android:foregroundGravity="center"
        app:layout_constraintTop_toBottomOf="@+id/deep_pan"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteX="19dp"
        />

    <TextView
        android:id="@+id/hand_tossed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="15dp"
        android:layout_marginTop="8dp"
        android:text="@string/hand_tossed"
        android:textColor="?attr/text_color"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.003"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/underline_choose" />

    <ImageView
        android:id="@+id/check1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/underline_choose"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:src="@drawable/check_24"
        android:layout_marginTop="8dp"
        android:layout_marginStart="350dp"
        android:visibility="invisible"/>

    <View
        android:id="@+id/underline_choose1"
        android:layout_width="370dp"
        android:layout_height="2dp"
        android:layout_marginTop="16dp"
        android:background="?attr/background_color"
        android:foregroundGravity="center"
        app:layout_constraintTop_toBottomOf="@+id/hand_tossed"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteX="19dp" />

    <TextView
        android:id="@+id/thin_Style"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="15dp"
        android:layout_marginTop="8dp"
        android:text="@string/thin_style"
        android:textColor="?attr/text_color"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.003"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/underline_choose1"/>

    <ImageView
        android:id="@+id/check2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/underline_choose1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:src="@drawable/check_24"
        android:layout_marginTop="8dp"
        android:layout_marginStart="350dp"
        android:visibility="invisible"/>

    <View
        android:id="@+id/underline_choose2"
        android:layout_width="370dp"
        android:layout_height="2dp"
        android:layout_marginTop="16dp"
        android:foregroundGravity="center"
        app:layout_constraintTop_toBottomOf="@+id/thin_Style"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteX="19dp" />

    <LinearLayout
        android:id="@+id/buttons_price"
        android:layout_width="match_parent"
        android:layout_height="61dp"
        app:layout_constraintTop_toBottomOf="@+id/underline_choose2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <Button
            android:id="@+id/cancel1"
            android:layout_width="205dp"
            android:layout_height="match_parent"
            android:backgroundTint="?attr/background_color"
            android:text="@string/cancel"
            android:textAllCaps="false"
            android:textColor="?attr/button_textColor"
            android:textSize="14sp"
            />

        <Button
            android:id="@+id/Confirm"
            android:layout_width="205dp"
            android:layout_height="match_parent"
            android:backgroundTint="?attr/indicator_color"
            android:text="@string/confirm"
            android:textAllCaps="false"
            android:textColor="?attr/button_textColor"
            android:textSize="14sp"
            />
    </LinearLayout>






</androidx.constraintlayout.widget.ConstraintLayout>